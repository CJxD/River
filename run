#!/bin/bash

BINARY=bin/river
TESTS=5

case "$1" in 

	"all")

		for i in `echo spl/*.spl`;
		do
			
			echo "Running test: $i"

			$BINARY $i $2 < ${i%.*}.input

		done

	;;

	"handin")

		for i in $(seq 1 $TESTS);
		do

			echo "Running test pr$i.spl"

			$BINARY pr$i.spl < spl/p$i.input

		done

	;;

	*)

		if [[ $1 != *[!0-9]* ]]; then

	    	$BINARY spl/p$1.spl $2 < spl/p$1.input
		
		else
	    
			$BINARY spl/$1.spl $2 < spl/$1.input

		fi

	;;

esac
